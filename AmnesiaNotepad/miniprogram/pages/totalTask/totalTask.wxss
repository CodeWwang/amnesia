@import '../../assets/iconfont.wxss';
@import '../../assets/weiui.wxss';

/** 标签部分 */
.label {
    height: 80rpx;
    /* border: 1px blue solid; */
    width: 96%;
    margin-left: 2%;
    border-bottom: 1rpx #f8f8f8 solid;
    display: flex;
    /* margin-top: 2rpx; */
    justify-content: flex-start;
    position:fixed;
    top:0;
    z-index: 99;
    background-color: white;
}

.labelBox {
    width: 15%;
    border: 1rpx gainsboro solid;
    margin-left: 4%;
    margin-top: 10rpx;
    height: 60rpx;
    text-align: center;
    border-radius: 100rpx;
    line-height: 60rpx;
    background-color: #f8f8f8;
}

.labelBox_select {
    width: 15%;
    border: 1rpx #1296db solid;
    height: 60rpx;
    margin-left: 4%;
    margin-top: 10rpx;
    text-align: center;
    border-radius: 100rpx;
    line-height: 60rpx;
    color: #1296db;
}

/* 没有数据时候的样式 */
.empty {
    color: grey;
    padding-top: 100rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
    font-family: '方正舒体';
    font-size: large;
    display: flex;
}

.empty image {
    margin-left: 200rpx;
    width: 200rpx;
    height: 200rpx;
    opacity: 0.2;
    position: absolute;
    z-index: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.content {
    /* border: 1px red solid; */
    padding-left: 30rpx;
    margin-top: 100rpx;
}

.box {
    /* margin-top: 2%; */
    width: 96%;
    float: left;
    /* border: 1px red solid; */
}

.left {
    float: left;
}

.operator {
    width: 16%;
    float: right;
    display: flex;
    justify-content: center;
}

/* 拖动排序 */
.sort {
    width: 50%;
    height: 100%;
}
.sort image {
    width: 40rpx;
    padding-left: 20rpx;
    height: 40rpx;
    margin-top: 8rpx; 
    
}

/* 切换到任务总览 */
.right {
    width: 33rpx;
    padding-left: 20rpx;
    height: 33rpx;
    margin-top: 8rpx; 
}

.right image {
    width: 35rpx;
    padding-left: 20rpx;
    height: 35rpx;
}

.movable-area {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
}

.movable-row {
    box-shadow: #D9D9D9 0px 0px 20px;
    width: 100%;
}

/* 添加按钮 */
.addButton image {
    position: fixed;
    bottom: 50px;
    right: 40px;
    width: 100rpx;
    height: 100rpx;
}

/* 添加窗口 */
.addWindow {
    background-color: #f8f8f8;
    position: fixed;
    height: 415px;
    width: 100%;
    bottom: -420px;
    padding-top: 10rpx;
}

.taskInput {
    background-color: white;
    height: 70rpx;
    margin: 15rpx 15rpx 15rpx 15rpx;
    padding-left: 15rpx;
}

.wrapper {
    padding: 15rpx;
    padding-top: 10rpx;
}

.iconfont {
    display: inline-block;
    padding: 8px 8px;
    width: 24px;
    height: 24px;
    cursor: pointer;
    font-size: 15px;
}

.toolbar {
    box-sizing: border-box;
    background: #fff;
    font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
}

.ql-container {
    box-sizing: border-box;
    padding: 10px 10px;
    width: 100%;
    min-height: 450rpx;
    border-top: 1px solid #ccc;
    background: #fff;
    font-size: 16px;
    line-height: 1.5;
}

/* 任务提交按钮 */
.taskSubmit {
    margin-top: 10rpx;
    display: flex;
    justify-content: center;
}